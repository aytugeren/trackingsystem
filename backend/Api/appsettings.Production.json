{
  "ConnectionStrings": {
    "DefaultConnection": "Host=YOUR_DB_HOST;Port=5432;Database=YOUR_DB;Username=YOUR_USER;Password=YOUR_PASS"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "Backup": {
    "Enabled": true,
    "BackupRoot": "ops/backups",
    "PgDumpPath": "pg_dump",
    "HourlyStartHour": 0,
    "HourlyEndHour": 23,
    "ArchiveAt": "23:59",
    "RetentionDays": 60,
    "Compress": true,
    "BusyStart": "09:00",
    "BusyEnd": "19:30"
  },
  "Optimization": {
    "EnableIndexCreation": false
  }
}


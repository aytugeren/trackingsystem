# Normalize text files and pick sensible EOLs per file type
* text=auto

.gitattributes text eol=lf
.gitignore     text eol=lf

# Crossâ€‘platform source files -> LF
*.cs      text eol=lf
*.csproj  text eol=lf
*.sln     text eol=lf
*.ts      text eol=lf
*.tsx     text eol=lf
*.js      text eol=lf
*.jsx     text eol=lf
*.json    text eol=lf
*.env     text eol=lf
*.jsonc   text eol=lf
*.md      text eol=lf
*.yml     text eol=lf
*.yaml    text eol=lf
*.xml     text eol=lf
*.css     text eol=lf
*.scss    text eol=lf
*.html    text eol=lf

# Shell scripts must be LF (Docker/Linux)
*.sh      text eol=lf

# Windows scripts can remain CRLF
*.bat     text eol=crlf
*.cmd     text eol=crlf
*.ps1     text eol=crlf

# Binary files
*.png     binary
*.jpg     binary
*.jpeg    binary
*.gif     binary
*.ico     binary
*.pdf     binary
*.woff    binary
*.woff2   binary
*.ttf     binary
*.eot     binary
